function intervalManager(flag, animate, time) {
   if(flag)
     intervalID =  setInterval(animate, time);
   else
     clearInterval(intervalID);
}

setTimeout(function() {
  intervalManager(true, animate, 100);
}, 500);		

var isPaused = false;
window.ads = [];
window.trggeredAds = [];
window.slots={};
sessionStorage.setItem('pagevalue',window.location.href);
var animate = function () {
	if (!isPaused) {
		var containerLength = $("[id^=div-gpt-ad]").length;
    isPaused = true;
		for (var i = 0; i < containerLength; i++) {
			var elementValue = $("[id^=div-gpt-ad]")[i].getAttribute("id");
			if (ads.indexOf(elementValue) > -1 || elementValue == null) {
				continue;
			}
			if (window.googletag && googletag.apiReady && elementValue != null && $('#' + elementValue + '').isOnScreen()) {
					loadAds(elementValue);
			}
		}
    isPaused = false;		
	}		
};
